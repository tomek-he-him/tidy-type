{
  "name": "type-css",
  "version": "0.1.1",
  "description": "A focused CSS library for tidy typesetting.",
  "scripts": {
    "diffy-package": "format-json package.json > .temp; mve .temp package.json",
    "changelog": "github_changelog_generator --user tomekwi --project type.css --output Changelog.md  # Requires https://github.com/skywinder/github-changelog-generator",
    "postversion": "npm run diffy-package",
    "precommit": "gulp build && git add dist",
    "prepublish": "gulp build"
  },
  "devDependencies": {
    "del": "^1.2.0",
    "format-json": "1.0.3",
    "gulp": "^3.9.0",
    "gulp-less": "^3.0.3",
    "gulp-minify-css": "^1.2.0",
    "gulp-rename": "^1.2.2",
    "husky": "0.8.1",
    "mve": "0.1.2"
  },
  "files": [
    "dist/**/*",
    "source/**/*",
    "Readme.md"
  ],
  "author": {
    "name": "Tomek Wiszniewski",
    "email": "t.wiszniewski@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/tomekwi/type.css"
  }
}
